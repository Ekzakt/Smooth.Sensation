@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>

        <div class="d-flex top-row px-4">
            <div class="p-2 ps-1">
                <b>Id</b>: @_id
            </div>
            <div class="p-2">
                <b>Build</b>: @_appVersions?.App
            </div>
            <div class="p-2">
                <b>NET</b>: @_appVersions?.FrameWork
            </div>
            <div class="ms-auto p-2">
                <LoginDisplay />
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>

</div>
